@model POS.Models.EmpleadoLoginModel

<h2>Iniciar Sesión</h2>

<form asp-action="Login" method="post">
    <div class="form-group">
        <label asp-for="Usuario"></label>
        <input asp-for="Usuario" class="form-control" />
        <span asp-validation-for="Usuario" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Contrasena"></label>
        <input asp-for="Contrasena" class="form-control" type="password" />
        <span asp-validation-for="Contrasena" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Iniciar Sesión</button>
</form>
<a asp-action="Register">Registrarse</a>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
