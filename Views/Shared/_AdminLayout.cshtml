<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Sistema POS</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f8f9fa;
            color: #333;
        }

        .navbar {
            background-color: #007bff;
            color: #fff;
            padding: 1rem;
        }

        .navbar-brand {
            color: #fff;
            text-transform: uppercase;
        }

        .navbar-nav .nav-link {
            color: #fff;
            margin-left: 15px;
        }

        .user-menu {
            display: flex;
            align-items: center;
            margin-left: 890px;
        }

        .dropdown-menu {
            display: none;
            position: absolute;
            right: 0;
            background-color: #fff;
            box-shadow: 0px 8px 16px rgba(0,0,0,0.2);
            min-width: 80px;
            z-index: 1;
            padding: 2px 0;
            margin-top: 5px;
        }

            .dropdown-menu a {
                color: #333;
                padding: 5px 8px;
                text-decoration: none;
                display: block;
                text-align: center;
            }

                .dropdown-menu a:hover {
                    background-color: #f1f1f1;
                }

        .dropdown {
            position: relative;
        }

            .dropdown span {
                cursor: pointer;
            }

            .dropdown i {
                margin-left: 5px;
            }

        .dropdown-menu .dropdown-item {
            display: flex;
            flex-direction: column;
            justify-content: center;
        }

            .dropdown-menu .dropdown-item span {
                font-size: 14px;
                font-weight: normal;
            }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg">
        <a class="navbar-brand" href="/Admin/Index">Sistema POS</a>
        <div class="navbar-nav">
            <a class="nav-link" href="/Productos/Index">Productos</a> 
            <a class="nav-link" href="/Empleados/Index">Empleados</a> 
            <a class="nav-link" href="/Clientes/Index">Clientes</a> 
            <a class="nav-link" href="/Ventas/Index">Ventas</a> 
        </div>
        <div class="user-menu">
            @if (User.Identity.IsAuthenticated)
            {
                <div class="dropdown">
                    <span class="text-white">
                        <i class="fas fa-user"></i> @User.Identity.Name
                        <i class="fas fa-chevron-down"></i>
                    </span>
                    <div class="dropdown-menu">
                        <a class="dropdown-item" href="/Cuenta/Logout">
                            <span>Cerrar</span>
                            <span>Sesión</span>
                        </a>
                    </div>
                </div>
            }
            else
            {
                <a class="btn btn-primary btn-sm" href="/Cuenta/Login">Iniciar sesión</a>
            }
        </div>
    </nav>

    <div class="container">
        @RenderBody()
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script>
        $(document).ready(function () {
            $('.dropdown span').click(function (e) {
                e.stopPropagation();
                var menu = $(this).siblings('.dropdown-menu');
                menu.toggle();
            });

            $(document).click(function (e) {
                if (!$(e.target).closest('.dropdown').length) {
                    $('.dropdown-menu').hide();
                }
            });
        });
    </script>
</body>
</html>
